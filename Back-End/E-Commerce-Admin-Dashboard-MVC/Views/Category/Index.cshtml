@model List<CategoryCreateModel>
@{
    int i = 0;
}
<div class="card-body">
    <h4 class="card-title">Hoverable Table</h4>
    <p class="card-description">
        Add class <code>.table-hover</code>
    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    @*<th>Id</th>*@
                    <th>Category Name</th>
                    <th>Description</th>
                    <th>created at</th>
                    <th>modified at</th>
                    <th>Control</th>



                </tr>
            </thead>
            <tbody>
               
                @foreach (var cat in Model)
                    {
                        String d = "delete" + cat.Id.ToString();
                        String e = "edite" + cat.Id.ToString();
                        ConfirmModel y = new ConfirmModel()
                            {
                                Id = cat.Id,
                                TagID = d,
                                Controller= "Category",
                                Action = "DeleteCategory"

                            };
                        
                        <tr>
                        <td>@(++i)</td>
                        @*<td>@cat.Id</td>*@
                        <td>@cat.Name</td>
                        <td>@cat.Description</td>
                        <td>@cat.created_at</td>
                        <td>@cat.modified_at</td>
                            <td >
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@d">Delete</button>
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#@e">Edit</button>
                            <a class="btn btn-info w-50" asp-controller="SubCategories" asp-action="index" asp-route-Id="@cat.Id">Show Subcategory</a>

                        </td>
                        
                    </tr>
                    <partial name="_Edit" model="cat"></partial>
                     <partial name="Confirm" model="y"></partial>
                }
               
              
            </tbody>
        </table>
    </div>
</div>

