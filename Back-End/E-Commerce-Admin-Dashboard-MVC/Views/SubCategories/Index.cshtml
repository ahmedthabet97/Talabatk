@model List<SubcategoryModelView>

<div class="card-body">
    <h4 class="card-title">Hoverable Table</h4>
    <p class="card-description">
        Add class <code>.table-hover</code>
    </p>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Brand Name</th>
                    <th>Category</th>
                    <th>created at</th>
                    <th>modified at</th>
                    <th>Control</th>
                    


                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var subcat in Model)
                {
                    String d = "delete" + subcat.Id.ToString();
                    String e = "edite" + subcat.Id.ToString();
                    ConfirmModel y = new ConfirmModel()
                {
                    Id = subcat.Id,
                    TagID = d,
                    Controller= "SubCategories",
                    Action = "DeleteSubCategories"

                };
                    i++;
                    <tr>
                        <td>@i</td>
                        <td>@subcat.BrandName</td>
                        <td>@subcat.CategoryName</td>
                        <td>@subcat.created_at</td>
                        <td>@subcat.modified_at</td>
                        <td>
                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@d">Delete</button>
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#@e">Edit</button>
                            <a class="btn btn-info" asp-controller="SubCategories" asp-action="index">Show Product</a>

                        </td>
                       
                    </tr>
                  @*  <partial name="_Edit" model="subcat"></partial>*@
                    <partial name="Confirm" model="y"></partial>
                }


            </tbody>
        </table>
    </div>
</div>

