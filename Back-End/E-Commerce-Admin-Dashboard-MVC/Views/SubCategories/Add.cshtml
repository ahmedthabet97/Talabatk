@model SubcategoryModelView


    

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Default form</h4>
        <p class="card-description">
            Basic form layout
        </p>
        <form class="forms-sample" data-ajax="true" method="post" asp-controller="SubCategories" asp-action="Add" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="BrandName">BrandName</label>
                <input asp-for="BrandName" class="form-control" placeholder="Name">
                <span asp-validation-for="BrandName" class="alert-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-select" aria-label="Default select example">
                    <option selected>Open this select menu</option>
                    @foreach (var cat in ViewBag.Category)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="alert-danger"></span>

            </div>
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <button class="btn btn-light">Cancel</button>
        </form>
    </div>
</div>