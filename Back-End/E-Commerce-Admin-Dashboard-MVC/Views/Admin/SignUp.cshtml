@model AdminRegistrationModel
<div class="row w-100 mx-0">
    <div class="col-lg-8 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
     
            <form class="pt-3" asp-controller="Admin" asp-action="Signup" method="post">
                <div class="form-group row">
                    <div class="col">
                            <input asp-for="FirstName" class="form-control form-control-md" id="exampleInputUsername1" placeholder="First Name">
                    </div>
                    <div class="col">
                        <input asp-for="LastName" class="form-control form-control-md" id="exampleInputUsername1" placeholder="Last Name">
                    </div>
                </div>
              
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-md" id="exampleInputUsername1" placeholder="Email">
                </div>
                <div class="form-group">
                    <input asp-for="UserName" class="form-control form-control-md" id="exampleInputUsername1" placeholder="User Name">
                </div>
                <div class="form-group">
                    <input asp-for="PhoneNumber" class="form-control form-control-md" id="exampleInputUsername1" placeholder="Phone Number">
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-md" id="exampleInputUsername1" placeholder="Password">
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmPassword" class="form-control form-control-md" id="exampleInputUsername1" placeholder="Confirm Password">
                </div>
                <div class="form-group">
                    <select class="form-control" asp-for="Role" asp-items="@ViewBag.Roles" form-control-lg" id="exampleFormControlSelect2">
                    </select>
                </div>
              
                
                <div class="mt-3">
                    <button class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit" >Register</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                    Already have an account? <a href="login.html" class="text-primary">Login</a>
                </div>
            </form>
        </div>
    </div>
</div>