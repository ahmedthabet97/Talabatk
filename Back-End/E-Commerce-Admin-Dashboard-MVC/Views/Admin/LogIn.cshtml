@model LogInModel
@{ Layout = null; }
       <partial name="partials/_head"></partial>

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
           
            <h4>Hello! let's get started</h4>
            <h6 class="font-weight-light">Sign in to continue.</h6>
            <form class="pt-3" asp-controller="Admin" asp-action="Login">
                <div asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <input asp-for="UserName" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">SIGN IN</button>
                </div>
                <div class="my-2 d-flex justify-content-between align-items-center">
                    <div class="form-check">
                        <label class="form-check-label text-muted">
                            <input asp-for="RememberMe" class="form-check-input">
                            Keep me signed in
                            <i class="input-helper"></i>
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>